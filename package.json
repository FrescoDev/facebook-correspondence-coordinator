{
    "name": "facebook-correspondence-coordinator",
    "version": "1.0.0",
    "description": "facebook-correspondence-coordinator",
    "main": "index.js",
    "scripts": {
        "build": "babel app -d build/app && babel service -d build/service",
        "postinstall": "npm run build",
        "clean": "rm -rf build && mkdir build",
        "start": "nodemon index.js",
        "start-dev": "babel-watch index.js",
        "test": "mocha --recursive --reporter spec --compilers js:babel-register tests",
        "test:watch": "nodemon --exec 'npm run test' tests",
        "serve-client": "http-server localChatWeb/js/bundle.js --cors",
        "validate": "npm run test && npm outdated --depth 0",
        "web_watch": "webpack --watch --watch-polling --config localChatWeb/js/webpack.config.js"
    },
    "repository": {
        "type": "git"
    },
    "engines": {
        "node": "6.9.0"
    },
    "author": "fresco-dev",
    "license": "MIT",
    "dependencies": {
        "babel-polyfill": "^6.23.0",
        "body-parser": "^1.17.1",
        "cors": "^2.8.1",
        "errorhandler": "^1.5.0",
        "es6-promise": "^4.1.0",
        "express": "^4.15.2",
        "facebook-messenger-bot": "^0.2.0",
        "fb-local-chat-bot": "0.0.4",
        "fresco-http-service-utilities": "^1.0.2",
        "helmet": "^3.5.0",
        "lodash": "^4.17.4",
        "method-override": "^2.3.7",
        "morgan": "^1.8.1",
        "nodemon": "^1.11.0"
    },
    "devDependencies": {
        "babel-cli": "^6.24.0",
        "babel-core": "^6.24.0",
        "babel-eslint": "^7.2.0",
        "babel-polyfill": "^6.23.0",
        "babel-preset-es2015": "^6.24.0",
        "babel-preset-stage-0": "^6.22.0",
        "babel-loader": "6.2.4",
        "babel-plugin-syntax-async-functions": "6.8.0",
        "babel-plugin-syntax-trailing-function-commas": "6.8.0",
        "babel-plugin-transform-async-to-module-method": "6.8.0",
        "babel-plugin-transform-class-properties": "6.10.2",
        "babel-plugin-transform-flow-strip-types": "6.8.0",
        "babel-preset-react": "6.11.1",
        "babel-register": "^6.24.0",
        "babel-watch": "^2.0.6",
        "classnames": "2.2.5",
        "chai": "^3.5.0",
        "chai-http": "^3.0.0",
        "eslint": "^3.18.0",
        "eslint-plugin-babel": "^4.1.1",
        "mocha": "^3.2.0",
        "nodemon": "^1.11.0",
        "jquery": "3.0.0",
        "react": "15.1.0",
        "react-dom": "15.1.0",
        "webpack": "1.13.1"
    }
}